{
  "name": "crypt-keeper-extension",
  "private": true,
  "version": "0.1.0-beta.1",
  "description": "Crypt-Keeper Extension, zero knowledge identity management and proof generation tool",
  "main": "index.js",
  "pnpm": {
    "packageManager": "pnpm"
  },
  "scripts": {
    "demo:start": "pnpm exec nx run-many --target=start",
    "merkle:start": "pnpm exec nx run-many --target=merkle",
    "build": "pnpm exec nx run-many --target=build",
    "dev": "pnpm exec nx run-many --target=dev",
    "build:e2e": "pnpm exec nx run-many --target=build:e2e",
    "build:chrome": "cross-env TARGET=chrome pnpm run build",
    "dev:chrome": "cross-env TARGET=chrome pnpm run dev",
    "build:firefox": "cross-env TARGET=firefox pnpm run build",
    "dev:firefox": "cross-env TARGET=firefox pnpm run dev",
    "publish": "pnpm exec nx run-many --target=publish",
    "merkle": "pnpm exec nx run-many --target=merkle",
    "test": "pnpm exec nx run-many --target=test",
    "test:coverage": "pnpm exec nx run-many --target=test:coverage",
    "e2e": "pnpm exec nx run-many --target=e2e",
    "e2e:ci": "pnpm exec nx run-many --target=e2e:ci",
    "lint": "pnpm exec nx run-many --target=lint",
    "lint:fix": "pnpm exec nx run-many --target=lint:fix",
    "prettier": "pnpm exec nx run-many --target=prettier",
    "prettier:fix": "pnpm exec nx run-many --target=prettier:fix",
    "types": "pnpm exec nx run-many --target=types",
    "commit": "cz",
    "githook:precommit": "pnpm exec nx run-many --target=githook:precommit",
    "githook:prepush": "pnpm exec nx run-many --target=githook:prepush",
    "prepare": "is-ci || husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CryptKeeperZK/crypt-keeper-extension"
  },
  "keywords": [
    "react",
    "typescript",
    "chrome",
    "firefox",
    "extension"
  ],
  "author": "Privacy and Scaling explorations team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CryptKeeperZK/crypt-keeper-extension/issues/new/choose"
  },
  "homepage": "https://github.com/CryptKeeperZK/crypt-keeper-extension",
  "devDependencies": {
    "@commitlint/cli": "^17.6.6",
    "@commitlint/config-conventional": "^17.6.6",
    "@swc/core": "^1.3.66",
    "assert": "^2.0.0",
    "buffer": "^6.0.3",
    "commitizen": "^4.3.0",
    "constants-browserify": "^1.0.0",
    "cross-env": "^7.0.3",
    "crypto-browserify": "^3.12.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.3.1",
    "env-cmd": "^10.1.0",
    "events": "^3.1.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "os-browserify": "^0.3.0",
    "path-browserify": "^1.0.0",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "string_decoder": "^1.3.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.3",
    "nx": "16.4.0",
    "nx-cloud": "latest"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
