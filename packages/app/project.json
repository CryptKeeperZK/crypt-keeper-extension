{
  "name": "@cryptkeeperzk/app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "preset": "conventional",
        "trackDeps": true,
        "push": false,
        "skipCommit": true,
        "noVerify": true,
        "postTargets": [
          "@cryptkeeperzk/app:bump",
          "@cryptkeeperzk/app:commit-changes",
          "@cryptkeeperzk/providers:github"
        ]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}"
      }
    },
    "bump": {
      "executor": "@cryptkeeperzk/manifest-bump:bump",
      "options": {
        "tag": "${tag}",
        "manifestPaths": [
          "packages/app/src/manifest/v2/manifest.firefox.json",
          "packages/app/src/manifest/v3/manifest.firefox.json",
          "packages/app/src/manifest/v3/manifest.chrome.json"
        ]
      }
    },
    "commit-changes": {
      "executor": "nx:run-commands",
      "options": {
        "command": "git add . && git commit -m 'chore(@cryptkeeperzk/app): release version ${tag}' --no-verify"
      }
    }
  }
}
